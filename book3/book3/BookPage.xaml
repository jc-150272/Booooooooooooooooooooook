<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="book3.BookPage"
             Title="本棚">
       <ContentPage.Content>
        <StackLayout>
            
            <Label Text=""></Label>
            <!-- 検索するバーを表示-->
            <SearchBar Placeholder = "Search"
                       PlaceholderColor="Gray"
                       x:Name="sBar"
                       SearchButtonPressed="Search_title"/>

            <!-- 親カテゴリを指定するプルダウンを表示 -->
            <Picker Title="ソート"
                        WidthRequest="240" 
                        SelectedIndexChanged="picker_SelectedIndexChanged"
                        x:Name="picker">
                <Picker.Items>
                   
                    <x:String>五十音：昇順</x:String>
                    <x:String>五十音：降順</x:String>                                        
                    <x:String>著者名：昇順</x:String>
                    <x:String>著者名：降順</x:String>
                    <x:String>発売日：昇順</x:String>
                    <x:String>発売日：降順</x:String>
                    <x:String>登録日：昇順</x:String>
                    <x:String>登録日：降順</x:String>
                </Picker.Items>
            </Picker>
            
            <Button Text="ソートする"
                    Clicked="OnSortButtonClicked"
                    />
    
    <ListView x:Name="BookListView" IsPullToRefreshEnabled="True"
                   Refreshing="OnRefreshing" RowHeight="100" ItemTapped="BookDetail">
        <ListView.ItemTemplate>
            <DataTemplate>

                <!-- セルをカスタマイズ-->
                <ViewCell x:class="MyCell">

                    <!-- レイアウトを水平方向に表示-->
                    <StackLayout Orientation="Horizontal">

                        <!-- セルを格子状にする-->
                        <Grid>

                            <!-- 3行にして高さを設定 -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="33" />
                                <RowDefinition Height="34" />
                                <RowDefinition Height="33" />
                            </Grid.RowDefinitions> 

                            <!-- 2列にして幅を設定 -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="350" />
                            </Grid.ColumnDefinitions>
                            <Label Text= "{Binding Name}" FontSize="15" Grid.Row="1" Grid.Column="1"/>
                        </Grid>

                        <!-- セルを格子状にする-->
                        <Grid>

                            <!-- 4行にして高さを設定 -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="25" />
                            </Grid.RowDefinitions>

                            <!-- 4行にして幅を設定 -->
                                    <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                            </Grid.ColumnDefinitions>

                            <!--お気に入りボタンを表示 -->
                            <Image Source="{Binding RedStar2}" Grid.Row="1" Grid.Column="1"/>
                            <!-- 読みたいボタンを表示 -->
                            <Image Source="{Binding BlueBook2}" Grid.Row="2" Grid.Column="1"/>

                        </Grid>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>