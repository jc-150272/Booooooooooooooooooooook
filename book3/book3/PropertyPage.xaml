<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="book3.PropertyPage"
             Title="設定">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Data">
                <TableView.Root>
                    <TableRoot>
                        <TableSection>

                            <!-- 一般ページに遷移 -->
                            <TextCell Text="一般" Tapped="Common" />

                            <!-- バックアップページに遷移 -->
                            <TextCell Text="バックアップ復元" Tapped="Backup" />

                            <!-- ヘルプページに遷移 -->
                            <TextCell Text="ヘルプ" Tapped="Help" />

                        </TableSection>
                    </TableRoot>
                </TableView.Root>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>